{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/aon/book.schema.json",
  "title": "Aon Book",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "frontMatter",
    "sections"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "frontMatter": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/frontMatterSection"
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/section"
      }
    }
  },
  "$defs": {
    "frontMatterSection": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "html"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "html": {
          "type": "string"
        }
      }
    },
    "section": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "html",
        "links"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "html": {
          "type": "string"
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/sectionLink"
          }
        }
      }
    },
    "sectionLink": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "text",
        "targetId"
      ],
      "properties": {
        "text": {
          "type": "string"
        },
        "targetId": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
