{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/aon/book.schema.json",
  "title": "Aon Book",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "seriesId",
    "title",
    "frontMatter",
    "sections"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "seriesId": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "frontMatter": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/frontMatterSection"
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/section"
      }
    }
  },
  "$defs": {
    "frontMatterSection": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "html"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "html": {
          "type": "string"
        }
      }
    },
    "section": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "blocks",
        "choices"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "blocks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/contentBlock"
          }
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/choice"
          }
        }
      }
    },
    "contentBlock": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "text"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "minLength": 1
        },
        "text": {
          "type": "string"
        }
      }
    },
    "choice": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "text",
        "targetId"
      ],
      "properties": {
        "text": {
          "type": "string"
        },
        "targetId": {
          "type": "string",
          "minLength": 1
        },
        "requirements": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "effects": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "randomOutcomes": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/randomOutcome"
          }
        },
        "ruleIds": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "randomOutcome": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "min": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        "max": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        "targetId": {
          "type": "string",
          "minLength": 1
        },
        "effects": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "required": [
        "min",
        "max"
      ],
      "anyOf": [
        {
          "required": [
            "targetId"
          ]
        },
        {
          "required": [
            "effects"
          ]
        }
      ]
    }
  }
}
