<Window x:Class="Aon.Desktop.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Aon.Desktop.Wpf.ViewModels"
        Title="{Binding BookTitle}" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <CollectionViewSource x:Key="BooksView" Source="{Binding Books}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="SeriesName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <DataTemplate DataType="{x:Type vm:StatEntryViewModel}">
            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="{Binding Label}" Width="160" Margin="0,0,8,0" />
                <TextBlock Text="{Binding Value}" Width="60" HorizontalAlignment="Right" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:FlagEntryViewModel}">
            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="{Binding Label}" Width="160" Margin="0,0,8,0" />
                <TextBlock Text="{Binding Value}" Width="140" TextWrapping="Wrap" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <TabControl Margin="12" SelectedIndex="{Binding ActiveTabIndex}">
        <TabItem Header="Book &amp; Series">
            <Grid Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="6" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ComboBox ItemsSource="{Binding Source={StaticResource BooksView}}"
                          Grid.Column="0"
                          SelectedItem="{Binding SelectedBook}"
                          Visibility="{Binding IsProfileReady, Converter={StaticResource BooleanToVisibilityConverter}}"
                          MinWidth="260"
                          Margin="0,0,0,12">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#444444" Margin="0,8,0,4" />
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ComboBox.GroupStyle>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding DisplayName}" />
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0" VerticalAlignment="Center">
                                    <ProgressBar Value="{Binding ProgressPercentage}"
                                                 Maximum="100"
                                                 Height="6"
                                                 Width="160"
                                                 Margin="0,0,8,0" />
                                    <TextBlock Text="{Binding ProgressPercentageText}" Margin="0,0,8,0" />
                                    <TextBlock Text="{Binding ProgressLabel}" Foreground="#666666" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <StackPanel Grid.Row="1" Grid.Column="0"
                            Visibility="{Binding IsProfileReady, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding BookTitle}" FontSize="22" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal"
                                Margin="0,6,0,0"
                                Visibility="{Binding HasSeriesContext, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Series:" FontWeight="SemiBold" Margin="0,0,6,0" />
                        <TextBlock Text="{Binding SeriesDisplayName}" />
                        <TextBlock Text=" (" />
                        <TextBlock Text="{Binding SeriesId}" />
                        <TextBlock Text=")" />
                    </StackPanel>
                    <TextBlock Text="{Binding SeriesContextSummary}"
                               ToolTip="{Binding SeriesContextTooltip}"
                               Foreground="#666666"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"
                               Visibility="{Binding HasSeriesContext, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding SectionTitle}" FontSize="16" Margin="0,8,0,16"
                           Visibility="{Binding IsProfileReady, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <ScrollViewer Grid.Row="3" Grid.Column="0" VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding IsProfileReady, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <Border Margin="0,0,0,12"
                                Padding="12"
                                BorderThickness="1"
                                BorderBrush="#FFFFC107"
                                Background="#20FFC107"
                                CornerRadius="6"
                                Visibility="{Binding HasRuleWarnings, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Rule validation warnings" FontWeight="SemiBold" />
                                <ItemsControl ItemsSource="{Binding RuleWarnings}" Margin="0,6,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,0,0,4" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                        <ItemsControl ItemsSource="{Binding Blocks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="14" />
                                                <Setter Property="FontWeight" Value="Normal" />
                                                <Setter Property="Margin" Value="0,0,0,12" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Kind}" Value="h1">
                                                        <Setter Property="FontSize" Value="22" />
                                                        <Setter Property="FontWeight" Value="Bold" />
                                                        <Setter Property="Margin" Value="0,12,0,12" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Kind}" Value="h2">
                                                        <Setter Property="FontSize" Value="18" />
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                        <Setter Property="Margin" Value="0,10,0,10" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Kind}" Value="h3">
                                                        <Setter Property="FontSize" Value="16" />
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                        <Setter Property="Margin" Value="0,8,0,8" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Border Margin="0,4,0,12"
                                Padding="12"
                                BorderThickness="1"
                                BorderBrush="#22000000"
                                CornerRadius="6"
                                Visibility="{Binding IsRandomNumberVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Random Number Table" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding RandomNumberStatus}" TextWrapping="Wrap" Margin="0,6,0,8" />
                                <TextBlock Text="{Binding RollHistoryText}" Foreground="#666666" Margin="0,0,0,8" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Roll modifier:" VerticalAlignment="Center" Margin="0,0,8,0" />
                                    <TextBox Text="{Binding RollModifierText}" Width="60" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,8"
                                            Visibility="{Binding IsRoundsToFireVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Rounds to fire:" VerticalAlignment="Center" Margin="0,0,8,0" />
                                    <TextBox Text="{Binding RoundsToFireText}" Width="60" />
                                </StackPanel>
                                <CheckBox Content="Manual mode (show choices after roll)"
                                          IsChecked="{Binding IsManualRandomMode}"
                                          Margin="0,0,0,8" />
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Roll Random Number"
                                            Command="{Binding RollRandomNumberCommand}"
                                            Margin="0,0,8,0" />
                                    <Button Content="Show Table"
                                            Command="{Binding ShowRandomNumberTableCommand}"
                                            Margin="0,0,8,0" />
                                    <Button Content="Continue"
                                            Command="{Binding ConfirmRandomNumberCommand}"
                                            Visibility="{Binding IsRandomNumberConfirmVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Margin="0,0,0,12"
                                Padding="12"
                                BorderThickness="1"
                                BorderBrush="#22000000"
                                CornerRadius="6"
                                Visibility="{Binding IsProfileReady, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Combat Resolver" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding CombatTableLabel}"
                                           Foreground="#666666"
                                           Margin="0,4,0,8" />
                                <TextBlock Text="Player Stats" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <StackPanel>
                                    <TextBlock Text="{Binding PlayerCombatSkill, StringFormat=Combat Skill: {0}}" />
                                    <TextBlock Text="{Binding PlayerEffectiveCombatSkill, StringFormat=Effective Combat Skill: {0}}" />
                                    <TextBlock Text="{Binding CombatSkillBonus, StringFormat=Combat Modifier: {0}}" />
                                    <TextBlock Text="{Binding PlayerEndurance, StringFormat=Endurance: {0}}" />
                                </StackPanel>
                                <StackPanel Margin="0,8,0,0"
                                            Visibility="{Binding HasCombatSeriesStats, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Series Combat Status" FontWeight="SemiBold" Margin="0,4,0,4" />
                                    <ItemsControl ItemsSource="{Binding CombatSeriesStats}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap">
                                                    <Run Text="{Binding Label}" />
                                                    <Run Text=": " />
                                                    <Run Text="{Binding Value}" />
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <TextBlock Text="Enemy Stats" FontWeight="SemiBold" Margin="0,12,0,4" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBlock Text="Combat Skill:" VerticalAlignment="Center" Margin="0,0,8,0" />
                                    <TextBox Text="{Binding EnemyCombatSkill}" Width="80" />
                                    <TextBlock Text="Endurance:" VerticalAlignment="Center" Margin="16,0,8,0" />
                                    <TextBox Text="{Binding EnemyEndurance}" Width="80" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Roll:" VerticalAlignment="Center" Margin="0,0,8,0" />
                                    <TextBox Text="{Binding CombatRoll}" Width="60" Margin="0,0,8,0" />
                                    <Button Content="Roll" Command="{Binding RollCombatNumberCommand}" />
                                </StackPanel>
                                <TextBlock Text="Outcome" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <StackPanel>
                                    <TextBlock Text="{Binding CombatRatio, StringFormat=Combat Ratio: {0}}" />
                                    <TextBlock Text="{Binding CombatPlayerLoss, StringFormat=Player Loss: {0}}" />
                                    <TextBlock Text="{Binding CombatEnemyLoss, StringFormat=Enemy Loss: {0}}" />
                                    <TextBlock Text="{Binding CombatPlayerDefeatedLabel, StringFormat=Player Defeated: {0}}" />
                                    <TextBlock Text="{Binding CombatEnemyDefeatedLabel, StringFormat=Enemy Defeated: {0}}" />
                                    <TextBlock Text="{Binding CombatOutcomeSummary}" TextWrapping="Wrap" Margin="0,6,0,0" Foreground="#444444" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="4" Grid.Column="0">
                    <Border Padding="0,8,0,12"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#22000000"
                            Visibility="{Binding HasSuggestedActions, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="Suggested Actions" FontWeight="SemiBold" Margin="0,0,0,4" />
                            <ItemsControl ItemsSource="{Binding SuggestedActions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Label}"
                                                Command="{Binding Command}"
                                                Margin="0,4,0,0" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <Border Padding="0,8,0,0"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#22000000"
                            Visibility="{Binding AreChoicesVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox Content="Show choice details"
                                      IsChecked="{Binding ShowChoiceDetails}"
                                      Margin="0,0,0,6" />
                            <ItemsControl ItemsSource="{Binding Choices}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,0">
                                            <Button Content="{Binding Text}"
                                                    Command="{Binding Command}"
                                                    IsEnabled="{Binding IsEnabled}" />
                                            <Border Margin="12,6,0,0"
                                                    Padding="8"
                                                    BorderThickness="1"
                                                    BorderBrush="#22000000"
                                                    Background="#11000000"
                                                    CornerRadius="4"
                                                    Visibility="{Binding DataContext.ShowChoiceDetails, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding RequirementsDisplay, StringFormat=Requirements: {0}}"
                                                               TextWrapping="Wrap" />
                                                    <TextBlock Text="{Binding EffectsDisplay, StringFormat=Effects: {0}}"
                                                               TextWrapping="Wrap"
                                                               Margin="0,4,0,0" />
                                                    <TextBlock Text="{Binding RuleIdsDisplay, StringFormat=Rule IDs: {0}}"
                                                               TextWrapping="Wrap"
                                                               Margin="0,4,0,0" />
                                                    <StackPanel Margin="0,6,0,0"
                                                                Visibility="{Binding HasValidationWarnings, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <TextBlock Text="Validation warnings"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#B45309" />
                                                        <ItemsControl ItemsSource="{Binding ValidationWarnings}" Margin="0,4,0,0">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,0,0,4" />
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Text="Select or create a profile to begin."
                           Foreground="#666666"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsProfileReady}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <GridSplitter Grid.Row="0"
                              Grid.RowSpan="5"
                              Grid.Column="1"
                              Width="6"
                              Background="#22000000"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              ResizeBehavior="PreviousAndNext" />

                <Border Grid.Row="1"
                        Grid.Column="2"
                        Grid.RowSpan="4"
                        Margin="16,0,0,0"
                        Padding="12"
                        BorderThickness="1"
                        BorderBrush="#22000000"
                        CornerRadius="6">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <TextBlock Text="{Binding CharacterPanelTitle}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
                            <TextBlock Text="{Binding ActiveProfileLabel}" Foreground="#666666" Margin="0,0,0,4" />
                            <TextBlock Text="{Binding ActiveCharacterLabel}" Foreground="#666666" Margin="0,0,0,12" />

                            <StackPanel Visibility="{Binding IsProfileReady, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Core Stats" FontWeight="SemiBold" />
                                <ItemsControl ItemsSource="{Binding CoreStats}" Margin="0,4,0,12">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Margin="0,0,0,4" TextWrapping="Wrap">
                                                <TextBlock.Inlines>
                                                    <Run Text="{Binding Label}" />
                                                    <Run Text=": " />
                                                    <Run Text="{Binding Value}" />
                                                </TextBlock.Inlines>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <StackPanel Visibility="{Binding HasCoreSkills, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Core Skills" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding BonusSkillPoints, StringFormat=Bonus Skill Points: {0}}"
                                               Foreground="#666666"
                                               Margin="0,2,0,4"
                                               Visibility="{Binding HasBonusSkillPoints, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <ItemsControl ItemsSource="{Binding CoreSkills}" Margin="0,4,0,12">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                    <TextBlock Text="{Binding Label}" Width="140" VerticalAlignment="Center" />
                                                    <Button Content="-" Command="{Binding DecreaseCommand}" Width="24" Margin="0,0,6,0" />
                                                    <TextBlock Text="{Binding Value}" Width="40" TextAlignment="Center" VerticalAlignment="Center" />
                                                    <Button Content="+" Command="{Binding IncreaseCommand}" Width="24" Margin="6,0,0,0" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <TextBlock Text="Attributes" FontWeight="SemiBold" />
                                <ItemsControl ItemsSource="{Binding AttributeStats}" Margin="0,4,0,12">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock TextWrapping="Wrap">
                                                <TextBlock.Inlines>
                                                    <Run Text="{Binding Label}" />
                                                    <Run Text=": " />
                                                    <Run Text="{Binding Value}" />
                                                </TextBlock.Inlines>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <StackPanel Visibility="{Binding HasSeriesStats, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Series Stats" FontWeight="SemiBold" />
                                    <ItemsControl ItemsSource="{Binding SeriesStats}" Margin="0,4,0,12">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap">
                                                    <TextBlock.Inlines>
                                                        <Run Text="{Binding Label}" />
                                                        <Run Text=": " />
                                                        <Run Text="{Binding Value}" />
                                                    </TextBlock.Inlines>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <StackPanel Visibility="{Binding HasFlags, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Flags" FontWeight="SemiBold" />
                                    <ItemsControl ItemsSource="{Binding FlagEntries}" Margin="0,4,0,12">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap">
                                                    <TextBlock.Inlines>
                                                        <Run Text="{Binding Label}" />
                                                        <Run Text=": " />
                                                        <Run Text="{Binding Value}" />
                                                    </TextBlock.Inlines>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <StackPanel Visibility="{Binding HasAvailableSkills, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Disciplines &amp; Skills" FontWeight="SemiBold" Margin="0,12,0,0" />
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,8">
                                        <ComboBox ItemsSource="{Binding AvailableSkills}"
                                                  SelectedItem="{Binding SelectedAvailableSkill}"
                                                  MinWidth="150"
                                                  Margin="0,0,8,0" />
                                        <Button Content="Add" Command="{Binding AddSkillCommand}" />
                                    </StackPanel>
                                    <ListBox ItemsSource="{Binding CharacterSkills}"
                                             SelectedItem="{Binding SelectedSkill}"
                                             HorizontalContentAlignment="Stretch"
                                             Height="80"
                                             Margin="0,0,0,8" />
                                    <Button Content="Remove Selected Skill" Command="{Binding RemoveSkillCommand}" Margin="0,0,0,12" />
                                </StackPanel>

                                <TextBlock Text="Inventory Counters" FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,6">
                                    <TextBox Text="{Binding CounterNameInput}" Width="120" Margin="0,0,8,0" />
                                    <Button Content="Add Counter" Command="{Binding AddCounterCommand}" />
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding InventoryCounters}" Margin="0,4,0,0"
                                              Visibility="{Binding HasInventoryCounters, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                <TextBlock Text="{Binding Label}" Width="140" VerticalAlignment="Center" />
                                                <Button Content="-" Command="{Binding DecreaseCommand}" Width="24" Margin="0,0,6,0" />
                                                <TextBlock Text="{Binding Value}" Width="40" TextAlignment="Center" VerticalAlignment="Center" />
                                                <Button Content="+" Command="{Binding IncreaseCommand}" Width="24" Margin="6,0,0,0" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Text="{Binding InventoryLabel}" FontWeight="SemiBold" Margin="0,12,0,4" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <TextBox Text="{Binding NewItemName}" Width="140" Margin="0,0,8,0" />
                                    <ComboBox ItemsSource="{Binding ItemCategories}"
                                              SelectedItem="{Binding NewItemCategory}"
                                              Width="120"
                                              Margin="0,0,8,0" />
                                    <Button Content="Add" Command="{Binding AddItemCommand}" />
                                </StackPanel>
                                <ListBox ItemsSource="{Binding InventoryItems}"
                                         SelectedItem="{Binding SelectedInventoryItem}"
                                         Height="100"
                                         Margin="0,0,0,6">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <Run Text="{Binding Name}" />
                                                <Run Text=" (" />
                                                <Run Text="{Binding Category}" />
                                                <Run Text=")" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button Content="Remove Selected Item" Command="{Binding RemoveItemCommand}" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </TabItem>

        <TabItem Header="Profiles">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Profile Management" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Profile:" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <ComboBox ItemsSource="{Binding Profiles}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedProfile}"
                              Width="220"
                              Margin="0,0,8,0" />
                    <Button Content="New Profile" Command="{Binding NewProfileCommand}" />
                    <Button Content="Delete All Profiles"
                            Command="{Binding DeleteProfilesCommand}"
                            Margin="8,0,0,0"
                            Visibility="{Binding IsDev, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>

                <TextBlock Grid.Row="2"
                           Text="Select a profile to manage progress, series status, and profile details."
                           Foreground="#666666"
                           TextWrapping="Wrap" />
            </Grid>
        </TabItem>

        <TabItem Header="Characters" IsEnabled="{Binding IsProfileSelected}">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Character Management" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Series:" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <ComboBox ItemsSource="{Binding CharacterSeriesOptions}"
                              SelectedItem="{Binding SelectedCharacterSeries}"
                              DisplayMemberPath="Name"
                              Width="220"
                              Margin="0,0,8,0" />
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Character:" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <ComboBox ItemsSource="{Binding Characters}"
                              SelectedItem="{Binding SelectedCharacter}"
                              DisplayMemberPath="DisplayName"
                              Width="220"
                              Margin="0,0,8,0"
                              IsEnabled="{Binding IsCharacterSeriesSelected}" />
                    <Button Content="New Character"
                            Command="{Binding NewCharacterCommand}"
                            IsEnabled="{Binding HasSelectedProfileAndSeries}" />
                </StackPanel>

                <TextBlock Grid.Row="3"
                           Text="Select a character to manage stats, skills, and inventory. Switching will return to the book tab."
                           Foreground="#666666"
                           TextWrapping="Wrap" />
            </Grid>
        </TabItem>

        <TabItem Header="Books">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Book Management" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />

                <ListView Grid.Row="1"
                          ItemsSource="{Binding Source={StaticResource BooksView}}"
                          BorderThickness="1"
                          BorderBrush="#22000000">
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Margin="0,8,0,4" />
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,4,0,4">
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding DisplayName}" Foreground="#666666" FontSize="12" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </TabItem>

        <TabItem Header="Importer">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Book Importer" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />

                <Grid Grid.Row="1" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Input folder:" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <TextBox Grid.Column="1" Text="{Binding ImportInputDirectory}" Margin="0,0,8,0" />
                    <Button Grid.Column="2" Content="Browse" Command="{Binding BrowseImportInputCommand}" />
                </Grid>

                <Grid Grid.Row="2" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Output folder:" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <TextBox Grid.Column="1" Text="{Binding ImportOutputDirectory}" Margin="0,0,8,0" />
                    <Button Grid.Column="2" Content="Browse" Command="{Binding BrowseImportOutputCommand}" />
                </Grid>

                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,12">
                    <Button Content="Run Import" Command="{Binding RunImportCommand}" Margin="0,0,12,0" />
                    <TextBlock Text="{Binding ImportStatus}" VerticalAlignment="Center" Foreground="#666666" />
                </StackPanel>

                <ProgressBar Grid.Row="4"
                             Height="10"
                             Value="{Binding ImportProgressValue}"
                             Maximum="{Binding ImportProgressMaximum}"
                             Margin="0,0,0,12" />

                <ScrollViewer Grid.Row="5" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Border Padding="12"
                                Margin="0,0,0,12"
                                BorderThickness="1"
                                BorderBrush="#FFEF9A9A"
                                Background="#20EF9A9A"
                                CornerRadius="6"
                                Visibility="{Binding HasImportErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Validation Errors" FontWeight="SemiBold" />
                                <ItemsControl ItemsSource="{Binding ImportErrors}" Margin="0,6,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,0,0,4" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <Border Padding="12"
                                Margin="0,0,0,12"
                                BorderThickness="1"
                                BorderBrush="#FFFFC107"
                                Background="#20FFC107"
                                CornerRadius="6"
                                Visibility="{Binding HasImportWarnings, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Import Warnings" FontWeight="SemiBold" />
                                <ItemsControl ItemsSource="{Binding ImportWarnings}" Margin="0,6,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,0,0,4" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
