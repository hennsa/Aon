{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://projectaon.org/schemas/RulesCatalog.schema.json",
  "title": "Rules Catalog",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ruleDefinition"
      }
    }
  },
  "required": ["rules"],
  "$defs": {
    "ruleDefinition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "requirements": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "effects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["id", "requirements", "effects"]
    }
  }
}
